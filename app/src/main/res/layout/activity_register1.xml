<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="false"
    android:gravity="right"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:layout_marginTop="28.8dp"
        android:layout_marginLeft="20.5dp"
        android:layout_marginBottom="35.4dp"/>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView2"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="-9dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/font"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/font"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="이메일"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/edit_round"
                android:ems="10"
                android:fontFamily="@font/font"
                android:hint="이메일을 입력해주세요."
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:lineSpacingExtra="0dp"
                android:paddingLeft="23dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/font"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="비밀번호"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_pw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/edit_round"
                android:ems="10"
                android:fontFamily="@font/font"
                android:hint="영문, 숫자, 특수문자 포함 8자 이상"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:lineSpacingExtra="0dp"
                android:paddingLeft="23dp"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:fontFamily="@font/font"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="휴대폰 번호"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="19dp"
                    android:layout_toLeftOf="@id/btn_authentication"
                    android:background="@drawable/edit_round"
                    android:ems="10"
                    android:fontFamily="@font/font"
                    android:hint="01012345678"
                    android:includeFontPadding="false"
                    android:inputType="number"
                    android:lineSpacingExtra="0dp"
                    android:paddingLeft="23dp"
                    android:textSize="13sp" />

                <Button
                    style="@style/Button"
                    android:id="@+id/btn_authentication"
                    android:layout_width="91dp"
                    android:layout_height="42dp"
                    android:layout_below="@id/textView2"
                    android:layout_alignParentRight="true"
                    android:text="인증하기"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:text="인증번호" />

            <EditText
                android:id="@+id/et_authenticationNo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_round"
                android:ems="10"
                android:fontFamily="@font/font"
                android:hint="인증번호 4자리"
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:lineSpacingExtra="0dp"
                android:paddingLeft="23dp"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/button3"
            style="@style/Button"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="184dp"
            android:layout_marginBottom="15dp"
            android:text="다음단계"
            />

    </RelativeLayout>


</RelativeLayout>