<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="336dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_border">

    <ImageView
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:src="@drawable/img_popup_img"
        android:layout_marginTop="42dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:includeFontPadding="false"
        android:textSize="16dp"
        android:textColor="@color/black3C"
        android:lineSpacingExtra="3dp"
        android:gravity="center_horizontal"
        android:text="내픽이상향에 \n 어떻게 추가하시겠어요?"
        android:layout_marginTop="28dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_marginTop="46dp">

        <Button
            android:id="@+id/btn_folder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/font"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:text="폴더로 추가"
            android:background="@drawable/dialogbtn_border_left"
            android:gravity="center"
            android:layout_marginRight="0.5dp"/>

        <Button
            android:id="@+id/btn_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/font"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:text="제품으로 추가"
            android:background="@drawable/dialogbtn_border_right"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
