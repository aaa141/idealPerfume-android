<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activity.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/greenv2">

            <ImageView style="@style/BackButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/dialog_bottom" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profileimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_launcher_background" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profileedit"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="bottom|right"
                    android:background="#3c3c3c" />
            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/TextLineSpacing"
                android:layout_marginTop="18dp"
                android:text="이름"
                android:textColor="#3c3c3c"
                android:textSize="16sp" />

            <TextView
                style="@style/TextLineSpacing"
                android:layout_marginTop="8dp"
                android:text="00세 성별"
                android:textColor="#8e8e8e" />

            <View
                style="@style/divider"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="31.5dp"
                android:layout_marginRight="22dp"
                android:background="#ebebeb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="23.5dp"
                android:layout_marginRight="22dp">

                <RelativeLayout
                    android:id="@+id/layout_point"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_seticon1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/icon_circle" />

                    <TextView
                        android:id="@+id/tv_pointhead"
                        style="@style/TextLineSpacing"
                        android:layout_toRightOf="@id/iv_seticon1"
                        android:text="이상향 포인트"
                        android:textColor="#3c3c3c" />

                    <TextView
                        android:id="@+id/tv_point"
                        style="@style/TextLineSpacing"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@id/tv_point_p"
                        android:text="777"
                        android:textColor="@color/greenv2"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_point_p"
                        style="@style/TextLineSpacing"
                        android:layout_marginRight="12.5dp"
                        android:layout_toLeftOf="@id/iv_point"
                        android:text="P"
                        android:textColor="#3c3c3c" />

                    <ImageView
                        android:id="@+id/iv_point"
                        android:layout_width="5.7dp"
                        android:layout_height="11.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:src="@drawable/ic_launcher_background" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_pointbutton"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_below="@+id/layout_point"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="37.5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_greenborder"
                        android:clickable="true">

                        <TextView
                            style="@style/TextLineSpacing"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="13dp"
                            android:lineSpacingExtra="2sp"
                            android:text="내가 쓴 후기"
                            android:textColor="@color/greenv2"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="35dp" />

                        <TextView
                            android:id="@+id/tv_myreview_num"
                            style="@style/TextLineSpacing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="35dp"
                            android:lineSpacingExtra="2sp"
                            android:text="7"
                            android:textColor="@color/greenv2"
                            android:textSize="12sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_greenborder"
                        android:clickable="true">

                        <TextView
                            style="@style/TextLineSpacing"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="13dp"
                            android:lineSpacingExtra="2sp"
                            android:text="요청한 제품"
                            android:textColor="@color/greenv2"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="35dp" />

                        <TextView
                            android:id="@+id/tv_requestproduct"
                            style="@style/TextLineSpacing"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="35dp"
                            android:lineSpacingExtra="2sp"
                            android:text="7"
                            android:textColor="@color/greenv2"
                            android:textSize="12sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_greenborder"
                        android:clickable="true">

                        <TextView
                            style="@style/TextLineSpacing"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="13dp"
                            android:lineSpacingExtra="2sp"
                            android:text="스크랩 후기"
                            android:textColor="@color/greenv2"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="35dp" />

                        <TextView
                            android:id="@+id/tv_scrapreview"
                            style="@style/TextLineSpacing"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="35dp"
                            android:lineSpacingExtra="2sp"
                            android:text="7"
                            android:textColor="@color/greenv2"
                            android:textSize="12sp" />
                    </FrameLayout>
                </LinearLayout>

                <View
                    style="@style/divider"
                    android:layout_below="@id/layout_pointbutton"
                    android:background="#ebebeb" />

                <RelativeLayout
                    android:id="@+id/layout_question"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_below="@id/layout_pointbutton"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_seticon2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/icon_circle" />

                    <TextView
                        android:id="@+id/tv_questionhead"
                        style="@style/TextLineSpacing"
                        android:layout_toRightOf="@id/iv_seticon2"
                        android:text="1:1 문의하기"
                        android:textColor="#3c3c3c" />

                    <ImageView
                        android:id="@+id/iv_question"
                        android:layout_width="5.7dp"
                        android:layout_height="11.5dp"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:src="@drawable/ic_launcher_background" />
                </RelativeLayout>

                <View
                    style="@style/divider"
                    android:layout_below="@id/layout_question"
                    android:background="#ebebeb" />

                <RelativeLayout
                    android:id="@+id/layout_customerservice"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_below="@id/layout_question"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_seticon3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/icon_circle" />

                    <TextView
                        style="@style/TextLineSpacing"
                        android:layout_toRightOf="@id/iv_seticon3"
                        android:text="고객센터"
                        android:textColor="#3c3c3c" />

                    <ImageView
                        android:id="@+id/iv_customerservice"
                        android:layout_width="5dp"
                        android:layout_height="9dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        android:clickable="true"
                        android:src="@drawable/ic_launcher_background" />
                </RelativeLayout>

                <View
                    style="@style/divider"
                    android:layout_below="@id/layout_customerservice"
                    android:background="#ebebeb" />

                <RelativeLayout
                    android:id="@+id/layout_versioninfo"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_below="@id/layout_customerservice"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_seticon4"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/icon_circle" />

                    <TextView
                        style="@style/TextLineSpacing"
                        android:layout_toRightOf="@id/iv_seticon4"
                        android:text="버전정보"
                        android:textColor="#3c3c3c" />

                    <ImageView
                        android:id="@+id/iv_versioninfo"
                        android:layout_width="5.7dp"
                        android:layout_height="11.5dp"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:src="@drawable/ic_launcher_background" />
                </RelativeLayout>

                <View
                    style="@style/divider"
                    android:layout_below="@id/layout_versioninfo"
                    android:background="#ebebeb" />

                <LinearLayout
                    android:id="@+id/layout_alarmset"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_below="@id/layout_versioninfo"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_seticon5"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/icon_circle" />

                    <TextView
                        style="@style/TextLineSpacing"
                        android:gravity="left"
                        android:text="알림설정"
                        android:textColor="#3c3c3c" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Switch
                        android:id="@+id/switch_alarmset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />
                </LinearLayout>

                <View
                    style="@style/divider"
                    android:layout_below="@id/layout_alarmset"
                    android:background="#ebebeb" />

                <RelativeLayout
                    android:id="@+id/layout_logout"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_below="@id/layout_alarmset"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_seticon6"
                        android:layout_width="12dp"
                        android:layout_height="21dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/icon_circle" />

                    <TextView
                        style="@style/TextLineSpacing"
                        android:layout_toRightOf="@id/iv_seticon6"
                        android:text="로그아웃"
                        android:textColor="#3c3c3c" />

                    <ImageView
                        android:id="@+id/iv_logout"
                        android:layout_width="5.7dp"
                        android:layout_height="11.5dp"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:src="@drawable/ic_launcher_background" />
                </RelativeLayout>

                <View
                    style="@style/divider"
                    android:layout_below="@id/layout_logout"
                    android:background="#ebebeb" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/layout_homemenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_homemenu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="11.6dp"
                android:src="@drawable/homemenu"
                android:layout_centerHorizontal="true"/>

            <TextView
                style="@style/TextLineSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홈"
                android:textColor="@color/bottommenu"
                android:textSize="10sp"
                android:lineSpacingExtra="2sp"
                android:layout_below="@id/iv_homemenu"
                android:layout_marginTop="8.5dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_mypickmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_mypickmenu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="11.6dp"
                android:src="@drawable/mypickmenu"
                android:layout_centerHorizontal="true"/>

            <TextView
                style="@style/TextLineSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내픽이상향"
                android:textColor="@color/bottommenu"
                android:textSize="10sp"
                android:lineSpacingExtra="2sp"
                android:layout_below="@id/iv_mypickmenu"
                android:layout_marginTop="8.5dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_eventmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_eventmenu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="11.6dp"
                android:src="@drawable/eventmenu"
                android:layout_centerHorizontal="true"/>

            <TextView
                style="@style/TextLineSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이벤트"
                android:textColor="@color/bottommenu"
                android:textSize="10sp"
                android:lineSpacingExtra="2sp"
                android:layout_below="@id/iv_eventmenu"
                android:layout_marginTop="8.5dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_settingmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_settingmenu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="11.6dp"
                android:src="@drawable/settingmenu"
                android:layout_centerHorizontal="true"/>

            <TextView
                style="@style/TextLineSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="환경설정"
                android:textColor="@color/green"
                android:textSize="10sp"
                android:lineSpacingExtra="2sp"
                android:layout_below="@id/iv_settingmenu"
                android:layout_marginTop="8.5dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>