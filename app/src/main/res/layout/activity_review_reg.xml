<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ReviewRegActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_back"
                style="@style/BackButton"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="후기작성"
                android:layout_alignBottom="@+id/btn_back"
                android:textSize="16sp"
                style="@style/menutext"/>

        </RelativeLayout>

        <View style="@style/divider"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--이미지-->

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장점을 작성해주세요."
                android:layout_marginTop="24dp"
                android:layout_marginBottom="11dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="5000"
                android:layout_below="@id/text1"
                android:background="@drawable/edit_round">
                <!--test-->
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:hint="제품에 대한 좋았던 사용감을 작성해주세요."
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:textSize="13sp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--이미지-->

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단점을 작성해주세요."
                android:layout_marginTop="20dp"
                android:layout_marginBottom="11dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="5000"
                android:layout_below="@id/text2"
                android:background="@drawable/edit_round">
                <!--test-->
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="제품에 대한 좋지 않았던 사용감을 작성해주세요."
                    android:inputType="textMultiLine"
                    android:textSize="13sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--이미지-->

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="떠오르는 이미지가 있나요?"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="11dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="5000"
                android:layout_below="@id/text3"
                android:background="@drawable/edit_round">
                <!--test-->
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="#보습#촉촉 등 이미지 해쉬태그를 남겨주세요."
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:textSize="13sp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <View 
            android:layout_marginTop="23.5dp"
            android:layout_marginBottom="23.5dp"
            style="@style/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:background="@drawable/rating_border"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="전체적인 평점을 남겨주세요."
                android:textSize="13sp" />

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:isIndicator="false"
                android:numStars="5"
                android:stepSize="1"/>

        </LinearLayout>
        <Button
            style="@style/ButtonX"
            android:layout_marginBottom="43dp"
            android:layout_marginTop="55dp"
            android:text="작성하기"/>
    </LinearLayout>

    </ScrollView>

    </LinearLayout>
