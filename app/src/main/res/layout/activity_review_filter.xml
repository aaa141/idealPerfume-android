<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ReviewFilterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            style="@style/BackButton"
            android:id="@+id/back"/>
        <TextView
            style="@style/menutext"
            android:text="필터"
            android:layout_alignBottom="@+id/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <View
        style="@style/divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="22dp"
                android:text="연령대" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignContent="space_around">

                <TextView
                    android:id="@+id/tv_ageAll"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tv_10"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10대"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_early20"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20대 초반"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_late20"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20대 후반"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_early30"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30대 초반"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_late30"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30대 후반"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_over40"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40대 초반 이상"
                    android:textSize="14sp" />
            </com.google.android.flexbox.FlexboxLayout>

            <View
                android:layout_marginTop="22dp"
                style="@style/divider" />

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:text="성별" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_genderAll"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_female"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여자"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_male"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_marginTop="22dp"
                style="@style/divider" />

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:text="리뷰종류" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_reviewAll"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"/>

                <TextView
                    android:id="@+id/tv_reviewPositive"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="긍정리뷰만" />

                <TextView
                    android:id="@+id/tv_reviewNegative"
                    style="@style/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="부정리뷰만" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_setFilter"
            style="@style/Button"
            android:text="필터 적용"
            android:layout_marginBottom="11dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>