<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_mainbackground"
                    android:layout_width="match_parent"
                    android:layout_height="454dp"
                    android:background="@drawable/mainbackground"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_login"
                    style="@style/MainHeader"
                    android:layout_marginTop="162dp"
                    android:clickable="true"
                    android:text="@string/mainhead" />

                <RelativeLayout
                    android:id="@+id/layout_gotest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="363dp"
                    android:layout_marginRight="44dp"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_gotest"
                        style="@style/MainHeader"
                        android:text="이상향 테스트 바로가기"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="5.5dp"
                        android:layout_height="11dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.5dp"
                        android:layout_toRightOf="@id/tv_gotest"
                        android:src="@drawable/img_main_shortcut" />
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-22dp"
                android:background="@drawable/dialog_bottom"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginBottom="36dp">

                    <EditText
                        android:id="@+id/et_mainsearch"
                        style="@style/editText_gray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="제품 또는 브랜드를 검색해보세요!"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="3sp"
                        android:textColor="#b5b5b5" />

                    <ImageView
                        android:id="@+id/iv_mainsearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginVertical="15dp"
                        android:layout_marginRight="17.5dp"
                        android:src="@drawable/img_search"
                        android:clickable="true"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_review"
                            android:layout_width="87dp"
                            android:layout_height="87dp"
                            android:layout_marginBottom="14dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/main_review" />

                        <TextView
                            style="@style/TextLineSpacing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="리뷰남기기"
                            android:textColor="#3c3c3c" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_perfume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_perfume"
                            android:layout_width="87dp"
                            android:layout_height="87dp"
                            android:layout_marginBottom="14dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/main_perfume" />

                        <TextView
                            style="@style/TextLineSpacing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="향수"
                            android:textColor="#3c3c3c" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_diffuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_diffuser"
                            android:layout_width="87dp"
                            android:layout_height="87dp"
                            android:layout_marginBottom="14dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/main_diffuser" />

                        <TextView
                            style="@style/TextLineSpacing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="디퓨저"
                            android:textColor="#3c3c3c" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="23dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_candle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_candle"
                            android:layout_width="87dp"
                            android:layout_height="87dp"
                            android:layout_marginBottom="14dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/main_candle" />

                        <TextView
                            style="@style/TextLineSpacing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="캔들"
                            android:textColor="#3c3c3c" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_aromaoil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_aromaoil"
                            android:layout_width="87dp"
                            android:layout_height="87dp"
                            android:layout_marginBottom="14dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/main_aromaoil" />

                        <TextView
                            style="@style/TextLineSpacing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아로마 오일"
                            android:textColor="#3c3c3c" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_bodylotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_bodylotion"
                            android:layout_width="87dp"
                            android:layout_height="87dp"
                            android:layout_marginBottom="14dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/main_bodylotion" />

                        <TextView
                            style="@style/TextLineSpacing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="바디로션"
                            android:textColor="#3c3c3c" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/divider"
                    android:layout_marginLeft="19.5dp"
                    android:layout_marginTop="51.5dp"
                    android:layout_marginRight="19.5dp"
                    android:layout_marginBottom="31.5dp"
                    android:background="#ebebeb" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="23dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월간 랭킹"
                    android:textColor="#3c3c3c" />

                <TextView
                    android:id="@+id/tv_rankcategoty"
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="향수"
                    android:textColor="@color/green" />
                <!--            <Spinner-->
                <!--                android:id="@+id/spinner"-->
                <!--                android:layout_width="20dp"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                app:spinnerMode="buttomsheet"/>-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11.5dp"
                    android:layout_gravity="right"
                    android:src="@drawable/img_shortcut_point" />
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_ranking"
                style="@style/TextBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="18dp"
                app:tabIndicatorColor="@color/green"
                app:tabIndicatorHeight="2dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/green" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager_rank"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:layout_marginLeft="19.5dp"
                android:layout_marginRight="19.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="31.5dp"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이상향"
                    android:textColor="#3c3c3c" />

                <TextView
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="매거진"
                    android:textColor="@color/green" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11.5dp"
                    android:layout_gravity="right"
                    android:src="@drawable/img_shortcut_point" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_idealmagagine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_homemenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_homemenu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11.6dp"
                android:src="@drawable/img_home_on" />

            <TextView
                style="@style/TextLineSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_homemenu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8.5dp"
                android:lineSpacingExtra="2sp"
                android:text="홈"
                android:textColor="@color/green"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_mypickmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_mypickmenu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11.6dp"
                android:src="@drawable/mypickmenu" />

            <TextView
                style="@style/TextLineSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_mypickmenu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8.5dp"
                android:lineSpacingExtra="2sp"
                android:text="내픽이상향"
                android:textColor="@color/bottommenu"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_eventmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_eventmenu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11.6dp"
                android:src="@drawable/eventmenu" />

            <TextView
                style="@style/TextLineSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_eventmenu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8.5dp"
                android:lineSpacingExtra="2sp"
                android:text="이벤트"
                android:textColor="@color/bottommenu"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_settingmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_settingmenu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11.6dp"
                android:src="@drawable/settingmenu" />

            <TextView
                style="@style/TextLineSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_settingmenu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8.5dp"
                android:lineSpacingExtra="2sp"
                android:text="환경설정"
                android:textColor="@color/bottommenu"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>