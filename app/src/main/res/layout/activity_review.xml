<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ReviewActivity">

    //헤더

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView style="@style/BackButton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20.5dp"
            android:gravity="center"
            android:text="세줄 후기"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    //구분선

    <View
        style="@style/line"
        android:layout_marginHorizontal="0dp"></View>


    //유용한 순, 필터

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="14.5dp"
        android:paddingLeft="20dp"
        android:paddingRight="17dp">

        //새로고침 버튼

        <LinearLayout
            android:id="@+id/btn_refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="11dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_launcher_background"></ImageView>

            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유용한 순"
                android:textColor="@color/reviewTextDarkGray"
                android:textSize="13dp"></TextView>
        </LinearLayout>

        //필터 버튼

        <LinearLayout
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="11dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_launcher_background"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="필터"
                android:textColor="@color/reviewTextDarkGray"
                android:textSize="13dp"></TextView>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginHorizontal="0dp"></View>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            //별점 프래그먼트

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/text_gray"
                android:paddingBottom="5dp"
                >

                <fragment
                    android:id="@+id/fragment_starRating"
                    android:name="com.example.idealperfume.Fragment.RatingFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    ></fragment>
            </LinearLayout>

            <View style="@style/line"></View>

            //세줄 후기 프래그먼트

            <fragment
                android:id="@+id/fragment_review"
                android:name="com.example.idealperfume.Fragment.ReviewFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"></fragment>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>