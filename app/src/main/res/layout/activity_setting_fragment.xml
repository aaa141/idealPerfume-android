<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    style="@style/AppBottomSheetDialogTheme"
    android:id="@+id/layout_settingbottomsheet">

<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:layout_width="120dp"-->
<!--        android:layout_height="120dp"-->
<!--        android:id="@+id/fab"-->
<!--        android:layout_margin="-60dp"-->
<!--        app:layout_anchor="@id/layout_settingbottomsheet"-->
<!--        app:layout_anchorGravity="top|end"/>-->

    <TextView
        style="@style/TextLineSpacing"
        android:textSize="16sp"
        android:textColor="#3c3c3c"
        android:layout_marginTop="78dp"
        android:text="이름"/>

    <TextView
        style="@style/TextLineSpacing"
        android:layout_marginTop="8dp"
        android:text="00세 성별"
        android:textColor="#8e8e8e"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="54dp"
        android:layout_marginRight="22dp">

        <RelativeLayout
            android:id="@+id/layout_point"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_seticon1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_circle"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_pointhead"
                style="@style/TextLineSpacing"
                android:layout_toRightOf="@id/iv_seticon1"
                android:text="이상향 포인트"
                android:textColor="#3c3c3c"/>

            <TextView
                android:id="@+id/tv_point"
                style="@style/TextLineSpacing"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/tv_point_p"
                android:text="777"
                android:textSize="16sp"
                android:textColor="#3c3c3c"/>

            <TextView
                android:id="@+id/tv_point_p"
                style="@style/TextLineSpacing"
                android:layout_marginRight="12.5dp"
                android:layout_toLeftOf="@id/iv_point"
                android:text="P"
                android:textColor="#3c3c3c" />

            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="5.7dp"
                android:layout_height="11.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_background"
                android:clickable="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_pointbutton"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/layout_point"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="37.5dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_border"
                android:clickable="true">

                <TextView
                    style="@style/TextLineSpacing"
                    android:textSize="12sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="2sp"
                    android:text="내가 쓴 후기"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="15dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/tv_myreview_num"
                    style="@style/TextLineSpacing"
                    android:textSize="12sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="2sp"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="35dp"
                    android:text="7"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_border"
                android:clickable="true">

                <TextView
                    style="@style/TextLineSpacing"
                    android:textSize="12sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="2sp"
                    android:text="요청한 제품"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="15dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/tv_requestproduct"
                    style="@style/TextLineSpacing"
                    android:textSize="12sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="2sp"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="35dp"
                    android:text="7"/>

            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:background="@drawable/btn_border"
                android:clickable="true">

                <TextView
                    style="@style/TextLineSpacing"
                    android:textSize="12sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="2sp"
                    android:text="스크랩 후기"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="15dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/tv_scrapreview"
                    style="@style/TextLineSpacing"
                    android:textSize="12sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="2sp"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="35dp"
                    android:text="7"/>
            </FrameLayout>
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_below="@id/layout_pointbutton"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>

        <RelativeLayout
            android:id="@+id/layout_question"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/layout_pointbutton"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_seticon2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_circle" />

            <TextView
                android:id="@+id/tv_questionhead"
                style="@style/TextLineSpacing"
                android:layout_toRightOf="@id/iv_seticon2"
                android:text="1:1 문의하기"
                android:textColor="#3c3c3c"/>

            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="5.7dp"
                android:layout_height="11.5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_launcher_background"
                android:clickable="true"/>
        </RelativeLayout>

        <View
            style="@style/line"
            android:layout_below="@id/layout_question"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>

        <RelativeLayout
            android:id="@+id/layout_customerservice"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/layout_question"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_seticon3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_circle" />

            <TextView
                style="@style/TextLineSpacing"
                android:layout_toRightOf="@id/iv_seticon3"
                android:text="고객센터"
                android:textColor="#3c3c3c"/>

            <ImageView
                android:id="@+id/iv_customerservice"
                android:layout_width="5dp"
                android:layout_height="9dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:src="@drawable/ic_launcher_background"
                android:clickable="true"/>
        </RelativeLayout>

        <View
            style="@style/line"
            android:layout_below="@id/layout_customerservice"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>

        <RelativeLayout
            android:id="@+id/layout_versioninfo"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/layout_customerservice"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_seticon4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_circle" />

            <TextView
                style="@style/TextLineSpacing"
                android:layout_toRightOf="@id/iv_seticon4"
                android:text="버전정보"
                android:textColor="#3c3c3c"/>

            <ImageView
                android:id="@+id/iv_versioninfo"
                android:layout_width="5.7dp"
                android:layout_height="11.5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_launcher_background"
                android:clickable="true"/>
        </RelativeLayout>

        <View
            style="@style/line"
            android:layout_below="@id/layout_versioninfo"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>

        <LinearLayout
            android:id="@+id/layout_alarmset"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/layout_versioninfo"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_seticon5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_circle"/>

            <TextView
                style="@style/TextLineSpacing"
                android:text="알림설정"
                android:gravity="left"
                android:textColor="#3c3c3c"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/switch_alarmset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_below="@id/layout_alarmset"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>

        <RelativeLayout
            android:id="@+id/layout_logout"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/layout_alarmset"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_seticon6"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_circle" />

            <TextView
                style="@style/TextLineSpacing"
                android:layout_toRightOf="@id/iv_seticon6"
                android:text="로그아웃"
                android:textColor="#3c3c3c"/>

            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="5.7dp"
                android:layout_height="11.5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_launcher_background"
                android:clickable="true"/>
        </RelativeLayout>

        <View
            style="@style/line"
            android:layout_below="@id/layout_logout"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>

    </RelativeLayout>

</LinearLayout>