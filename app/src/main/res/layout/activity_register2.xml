<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:focusable="true"
        >

        //백버튼

        <ImageView
            android:id="@+id/imageView2"
            style="@style/BackButton" />

        //타이틀 점 세개

        <LinearLayout
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_weight="2"
                android:text="회원가입" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_step_02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="연령"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_year"
                style="@style/comboBox"
                android:layout_marginHorizontal="0dp"
                android:hint="출생년도를 선택해주세요." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="직업"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_job"
                style="@style/comboBox"
                android:layout_marginHorizontal="0dp"
                android:hint="직업을 선택해주세요." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="성별"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/tv_gender"
                style="@style/comboBox"
                android:layout_marginHorizontal="0dp"
                android:hint="성별을 선택해주세요." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="닉네임"
                android:textSize="13dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_nickname"
                    style="@style/editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="2~12자로 입력해주세요."
                    android:inputType="text"
                    android:maxLength="12" />

                <Button
                    android:id="@+id/btn_doublecheck"
                    style="@style/BfrButton"
                    android:layout_width="91dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:text="중복확인"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_chkret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ㅇㅇㅇㅇㅇ"
                android:textColor="@color/green6D"
                android:layout_marginVertical="13dp"
                android:visibility="invisible"
                ></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="15dp">
            //버튼
            <Button
                android:id="@+id/button3"
                style="@style/BfrButton"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="0dp"
                android:clickable="false"
                android:layout_alignParentBottom="true"
                android:text="다음단계"></Button>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>