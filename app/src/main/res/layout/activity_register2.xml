<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="false"
    android:gravity="right"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        style="@style/BackButton"/>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="33dp"
            android:layout_height="7dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_step_02"
            android:layout_marginTop="12dp"
            android:layout_marginRight="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_register"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="연령"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_year"
                style="@style/comboBox"
                android:layout_marginHorizontal="0dp"
                android:hint="출생년도를 선택해주세요."/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="직업"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_job"
                style="@style/comboBox"
                android:layout_marginHorizontal="0dp"
                android:hint="직업을 선택해주세요." />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="성별"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tv_gender"
                style="@style/comboBox"
                android:layout_marginHorizontal="0dp"
                android:hint="성별을 선택해주세요." />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/font"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="닉네임"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_nickname"
                    style="@style/editText"
                    android:layout_marginHorizontal="0dp"
                    android:layout_below="@id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/btn_doublecheck"
                    android:ems="10"
                    android:maxLength="12"
                    android:hint="2~12자로 입력해주세요."
                    android:inputType="text"/>

                <Button
                    android:id="@+id/btn_doublecheck"
                    android:layout_marginLeft="10dp"
                    android:layout_width="91dp"
                    android:layout_height="42dp"
                    android:layout_below="@id/textView2"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_bfrclick"
                    android:text="중복확인"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button3"
            style="@style/BfrButton"
            android:layout_marginHorizontal="0dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:text="다음단계"/>

    </RelativeLayout>

</RelativeLayout>