<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Register3Activity">

    <ImageView style="@style/BackButton"/>

    //헤더
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"/>

        <View
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="0dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="33dp"
            android:layout_height="7dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_step_01"
            android:layout_marginTop="12dp"
            android:layout_marginRight="38dp"/>
    </LinearLayout>

    //이용약관

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_guide_top"
        android:layout_marginHorizontal="23dp"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:includeFontPadding="false"
            android:paddingHorizontal="4dp"
            android:text="이상향 이용약관 동의"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/img_shortcut_setting"/>
    </LinearLayout>

    //개인정보 수집이용 동의

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:background="@drawable/signup_guide_center"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:includeFontPadding="false"
            android:paddingHorizontal="4dp"
            android:text="개인정보 수집이용 동의"></TextView>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/img_shortcut_setting"></ImageView>
    </LinearLayout>

    //개인정보 수집이용 동의

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:background="@drawable/signup_guide_bottom"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:includeFontPadding="false"
            android:paddingHorizontal="4dp"
            android:text="만 14세 이상 확인"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="2">

        <CheckBox
            android:id="@+id/cb_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#000000"></CheckBox>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 동의합니다."
            android:textColor="@color/black"
            android:textSize="13dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        //버튼

        <Button
            style="@style/Button"
            android:clickable="false"
            android:id="@+id/btn_final_signup"
            android:text="가입완료"></Button>
    </LinearLayout>

</LinearLayout>