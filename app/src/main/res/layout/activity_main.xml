<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_mainbackground"
            android:layout_width="match_parent"
            android:layout_height="454dp"
            android:background="@drawable/mainbackground"
            android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_login"
                style="@style/MainHeader"
                android:layout_marginTop="162dp"
                android:text="@string/mainhead"
                android:clickable="true"/>

            <TextView
                style="@style/MainHeader"
                android:layout_marginTop="363dp"
                android:layout_marginRight="44dp"
                android:text="이상향 테스트 바로가기"
                android:textSize="14sp"
                android:layout_gravity="right"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-22dp"
            android:background="@drawable/dialog_bottom"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/et_mainsearch"
                style="@style/editText_gray"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="36dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="3sp"
                android:hint="제품 또는 브랜드를 검색해보세요!"
                android:textColor="#b5b5b5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:clickable="true"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:background="@drawable/border_radius45"
                        android:layout_marginBottom="14dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextLineSpacing"
                        android:textColor="#3c3c3c"
                        android:text="리뷰남기기"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_perfume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:clickable="true"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/border_radius45" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextLineSpacing"
                        android:textColor="#3c3c3c"
                        android:text="향수"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_diffuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:clickable="true"
                    android:layout_weight="1">

                    <ImageView

                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:background="@drawable/border_radius45"
                        android:layout_marginBottom="14dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextLineSpacing"
                        android:textColor="#3c3c3c"
                        android:text="디퓨저"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:id="@+id/ll_candle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:clickable="true"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:background="@drawable/border_radius45"
                        android:layout_marginBottom="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextLineSpacing"
                        android:textColor="#3c3c3c"
                        android:text="캔들"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_aromaoil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:clickable="true"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:background="@drawable/border_radius45"
                        android:layout_marginBottom="14dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextLineSpacing"
                        android:textColor="#3c3c3c"
                        android:text="아로마 오일"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bodylotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:clickable="true"
                    android:layout_weight="1">

                    <ImageView

                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:background="@drawable/border_radius45"
                        android:layout_marginBottom="14dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextLineSpacing"
                        android:textColor="#3c3c3c"
                        android:text="바디로션"/>
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/divider"
                android:layout_marginLeft="19.5dp"
                android:layout_marginRight="19.5dp"
                android:layout_marginTop="51.5dp"
                android:layout_marginBottom="31.5dp"
                android:background="#ebebeb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="23dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:textColor="#3c3c3c"
                android:text="월간 랭킹"/>

            <TextView
                android:id="@+id/tv_rankcategoty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:textColor="@color/green"
                android:text="향수 ▼"
                android:layout_marginLeft="6dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="6dp"
                android:layout_height="11.5dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_launcher_background"/>
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            app:tabSelectedTextColor="@color/green"
            app:tabIndicatorColor="@color/green"
            app:tabIndicatorHeight="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

<!--            <com.google.android.material.tabs.TabItem-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="전체"/>-->

<!--            <com.google.android.material.tabs.TabItem-->
<!--                android:id="@+id/tabitem_10s"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="10대"/>-->

<!--            <com.google.android.material.tabs.TabItem-->
<!--                android:id="@+id/tabitem_20s"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="20대"/>-->

<!--            <com.google.android.material.tabs.TabItem-->
<!--                android:id="@+id/tabitem_30s"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="30대"/>-->

<!--            <com.google.android.material.tabs.TabItem-->
<!--                android:id="@+id/tabitem_40s"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="40대 이상"/>-->

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="31.5dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:textColor="#3c3c3c"
                android:text="이상향"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:textColor="@color/green"
                android:text="매거진"
                android:layout_marginLeft="6dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="6dp"
                android:layout_height="11.5dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_launcher_background"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_idealmagagine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>